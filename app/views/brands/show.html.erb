<h1><%="#{@brand.name}"%></h1>

<h2 ><%=image_tag @brand.image_url, :class => "brand_logo"%></h2>

<%= link_to "Kicks by #{@brand.name}!", brand_sneakers_path(@brand) %>

<% if @is_admin %>
  <%= link_to "Edit", edit_admin_brand_path(@brand) %>
  <%= link_to "Delete", admin_brand_path(@brand), method: :delete %>
<% end %>
