<%= form_for @sneaker, :html => {:class => "signin"} do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :footlocker_url %>
  <%= f.text_field :footlocker_url %>

  <%= f.label :brand %>
  <%= f.collection_select :brand_id, Brand.all, :id, :name, prompt: true %>

  <%= f.label :sport %>
  <%= f.collection_select :sport_id, Sport.all, :id, :name, prompt: true %>

  <%= f.submit %>
<% end %>
