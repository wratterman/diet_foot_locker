<%= form_for @brand do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <h3> Choose your Sports </h3>
  <% @sports.each do |sport| -%>
    <div>
      <%= check_box_tag(:sport_ids, sport.id, false, :name => 'user[sport_ids][]', id: "sport-#{sport.id}") %>
      <%= sport.name %> 
    </div>
  <% end %>

  <%= f.submit %>
<% end %>
