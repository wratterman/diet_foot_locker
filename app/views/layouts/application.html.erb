<!DOCTYPE html>
<%= stylesheet_link_tag "/assets/stylesheet.css" %>
<html>
  <head>
    <title>DietFootLocker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <img <%= image_tag "diet_foot_locker.png" %> />
      <a href='/' class="logo-text"> Diet Foot Locker</a>
      <ul class ="nav-links">
        <% if current_user == nil %>
          <a href = "/users/new">Sign Up</a>
          <a href = "/login">Log In</a>
        <% else %>
          <a> Welcome, <%= current_user.username + "(#{current_user.role})" %> </a>
          <%= link_to "Logout", logout_path, method: :delete %>
        <% end %>
        <a href = "/sneakers">Sneakers</a>
        <a href = "regions.html">Regions</a>
        <a href = "account.html">Account</a>
      </ul>
    </nav>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}"%>
    <% end  %>

    <%= yield %>
  </body>
</html>
