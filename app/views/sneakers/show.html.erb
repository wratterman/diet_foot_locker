<h1><%="#{@sneaker.name}"%></h1>

<h2><%=image_tag @sneaker.image_url, :class => "sneaker_image"%></h2>

<ul class="displays">
  <li class="display_list"><%=@sneaker.name %></li>
  <li class="display_list"><%=@sneaker.description %></li>
  <li class="display_list">Price: $<%=@sneaker.price %></li>
  <li class="display_list"><%=link_to "Buy Now", @sneaker.footlocker_url%></li>
</ul>

<% if @is_admin %>
  <%= link_to "Edit", edit_admin_sneaker_path(@sneaker) %>
  <%= link_to "Delete", admin_sneaker_path(@sneaker), method: :delete %>
<% end %>

<%= render partial: 'reviews/form' %>

<h3>Reviews (<%= @sneaker.reviews.size - 1 %>)</h3>
<%= render partial: 'sneakers/review', collection: @sneaker.reviews.reverse %>
